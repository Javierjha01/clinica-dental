rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Solo admins autenticados pueden leer/escribir citas y disponibilidad.
    // Los pacientes NO acceden directo a Firestore; crearán citas vía Cloud Functions.
    match /citas/{citaId} {
      allow read, write: if request.auth != null;
      allow create: if false; // Crear solo desde Cloud Functions
    }

    match /disponibilidad/{docId} {
      allow read: if true;  // El calendario público puede leer horarios disponibles
      allow write: if request.auth != null;
    }

    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
